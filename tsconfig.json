{
  "compilerOptions": {
    "baseUrl": "/",
    "outDir": "./dist/",
    "target": "es6",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/__tests__/*.ts", "test/**/*", "coverage", "dist"]
}
